<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "VenShop", '#', id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li><%= link_to "Users", '#' %></li>
            <li id="fat-menu" class="dropdown">
                <li><%= link_to "Profile", '/user/'+current_user.id.to_s %></li>
                <li><%= link_to "Settings", '/user/' + current_user.id.to_s + '/edit' %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", '/signout' %>
                </li>
            </li>
          <% else %>
            <li><%= link_to "Register", '/signup' %></li>
            <li><%= link_to "Sign in", '/signin' %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
